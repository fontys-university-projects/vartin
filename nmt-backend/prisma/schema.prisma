// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  uid       String    @unique
  createdAt DateTime  @default(now())
  email     String    @unique
  password  String
  role      UserRole  @default(User)
  avatar    String?
  firstName String?
  dob       DateTime?
  library   Library[]
}



// create game endpoint
model Game {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String

  library Library[]
}

// Create user library, register game, modify game's score endpoint
model Library {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  score Int?
  level Int?

  game   Game   @relation(references: [id], fields: [gid], onDelete: Cascade)
  gid    String @db.ObjectId
  author User   @relation(references: [id], fields: [userId], onDelete: Cascade)
  userId String @db.ObjectId
}

enum UserRole {
  Author
  User
  Admin
}
